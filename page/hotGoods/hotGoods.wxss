/**index.wxss**/
.sec-kill {
  height: 100%;
  position: relative;
}

.inline-block {
  display: inline-block;
}

.header {
  position: absolute;
  left: 0;
  top: 0;
  height: 94rpx;
  line-height: 94rpx;
  width: 100%;
  background: white;
  border-bottom: 1px solid #f2f2f2;
}

.single {
  display: inline-block;
  height: 100%;
  width: 240rpx;
  text-align: center;
}

.text-detail {
  height: 100%;
  display: inline-block;
}

.single .active {
  color: #2fa7e0;
  border-bottom: 4rpx solid #2fa7e0;
}

.main-container {
  position: absolute;
  top: 94rpx;
  bottom: 0;
  width: 100%;
}

.wait-more {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.top-slider {
  display: block;
  width: 100%;
  height: 40%;
  background: white;
  border: 2rpx solid #e5e5e5;
}
  .slider-sec{
    width: 100%;
    height: 100%;
  }
    .slide-image{
      width:100%;
      height:100%;
    }
.list-detail {
  position: relative;
  width: 100%;
  background: white;
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  margin-top: 12rpx;
  padding: 20rpx 20rpx 20rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.list-detail .list-sec {
  width: 100%;
  height: 220rpx;
  box-sizing: border-box;
}

.left-sec {
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: top;
  padding-right: 40rpx;
  width: 36%;
  box-sizing: border-box;
}

.sec-img {
  width: 100%;
  height: 100%;
}

.right-sec {
  position: relative;
  vertical-align: top;
  display: inline-block;
  width: 60%;
  height: 100%;
}

.right-sec .title {
  position: absolute;
  top: 12rpx;
  width: 100%;
  height: 40rpx;
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;         /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
  font-size: 32rpx;
}

.right-sec .description {
  margin-top: 80rpx;
  font-size: 24rpx;
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;
}

.right-sec .pirce-wrapper {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  font-szie: 28rpx;
}

.now {
  color: red;
  margin-right: 40rpx;
  font-size: 36rpx;
}

.origin {
  position: relative;
  color: #4a4a4a;
}

.origin:after {
  position: absolute;
  content: "";
  width: 100%;
  height: 2rpx;
  top: 50%;
  left: 0;
  background: red no-repeat center center/100% 2rpx;
}

.list-bottom {
  position: relative;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 24rpx;
}

.go-buy {
  position: absolute;
  right: 10rpx;
  bottom: -8rpx;
  width: 140rpx;
  height: 52rpx;
  line-height: 52rpx;
  transform: translateY(-50%);
  text-align: center;
  border: 2rpx solid gray;
  color: gray;
  border-radius: 8rpx;
  font-size: 26rpx;
}