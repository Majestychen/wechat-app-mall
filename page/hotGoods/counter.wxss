.inline-block{
    display: inline-block;
}
.clearfix:after{
    content: "";
    clear: both;
    display: block;
    height: 0;
}
.received-wrapper{
    border-bottom: 2rpx solid #e5e5e5;
    background: white;
    overflow: hidden;
}
.no-address-wrapper{
    text-align: center;
}
.no-address{
    position: relative;
    display: inline-block;
    margin: 120rpx auto;
    padding-left: 50rpx;
    color: #2fa7e0;
    text-align: center;
    font-size: 32rpx;
}
.no-address:after{
    content: "+";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    font-size: 34rpx;
    text-align: center;
    color: #2fa7e0;
    border-radius: 50%;
    border: 1px solid #2fa7e0;
}
.top-sec{
    overflow: hidden;
}
.user-info{
    margin: 20rpx 0;
    font-size: 28rpx;
}

.border-gray{
    border-bottom: 1rpx solid #e5e5e5;
    padding: 20rpx 34rpx 0;
}
.getter{
    position: relative;
    box-sizing: border-box;
    padding-left: 40rpx;
}
.right-arrow{
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}
.arrow{
    width: 30rpx;
    height: 30rpx;
    display: block;
}
.address-detail{
    margin: 16rpx 0;
    color: #888888;
    font-size: 28rpx;
}
.getter{
    width: 60%;
    font-size: 32rpx;
}
.list-detail {
    width: 100%;
    background: white;
    border-top: 2rpx solid #e5e5e5;
    border-bottom: 2rpx solid #e5e5e5;
    margin: 18rpx 0;
    padding: 26rpx 26rpx 26rpx 34rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.list-detail .list-sec {
    width: 100%;
    height: 174rpx;
    box-sizing: border-box;
}

.left-sec {
    height: 100%;
    width: 28%;
    box-sizing: border-box;
    display: inline-block;
    vertical-align: top;
    padding-right: 20rpx;
    box-sizing: border-box;
}

.sec-img {
    width: 100%;
    height: 100%;
}

.right-sec {
    position:relative;
    vertical-align: top;
    display: inline-block;
    width: 70%;
    height: 100%;
}

.right-sec .title {
    position: absolute;
    top: 0;
    width: 100%;
    height: 40rpx;
    font-size: 32rpx;
    word-break:keep-all;           /* 不换行 */
    white-space:nowrap;          /* 不换行 */
    overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
    text-overflow:ellipsis;
}

.right-sec .description {
    margin-top: 56rpx;
    font-size: 24rpx;
}

.right-sec .pirce-wrapper {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 40rpx;
    font-szie: 28rpx;
}
.pirce-wrapper .inline-block {
    width: 50%;
}
.pirce-wrapper .num{
    text-align: right;
}
.center-sec{
    width: 100%;
    background: white;
    border-top: 2rpx solid #e5e5e5;
    padding: 26rpx 26rpx 26rpx 34rpx;
    box-sizing: border-box;
    overflow: hidden;
    font-size: 32rpx;
}
.wechat-pay{
    position: relative;
}
.wechat-pay .word:after{
    content: "\2713";
    position: absolute;
    right: 30rpx;
    top: 50%;
    width: 42rpx;
    height: 42rpx;
    line-height: 42rpx;
    transform: translateY(-50%);
    font-size: 32rpx;
    border-radius: 50%;
    background-color: #09bb07;
    color: white;
    text-align: center;
}
.center-sec .inline-block{
    width: 50%;
}
.delivery{
    border-bottom: 2rpx solid #e5e5e5;
}
.delivery .right{
    text-align: right;
    color: #888888;
    font-size: 26rpx;
}
.bottom-sec{
    background: white;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height:92rpx;
    line-height:72rpx;
    padding:10rpx 30rpx;
    box-sizing: border-box;
    font-size: 32rpx;
}

.bottom-sec .right-sec{
    text-align: right;
}
.bottom-sec .right-sec button{
    width: 56%;
    height:60rpx;
    line-height:60rpx;
    margin-top:10rpx;
    margin-right: 0;
    color: white;
    background-color: #2fa7e0;
    font-size: 28rpx;
}
.bottom-sec .left-sec, .bottom-sec .right-sec{
    width: 50%;
}
.left-sec .red-word{
    color: red;
    font-size: 46rpx;
}