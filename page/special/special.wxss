.now {
  color: red;
  margin-right: 70rpx;
  font-size: 36rpx;
}
.person{
  font-size: 24rpx;
  margin-right: 30rpx;
}
.origin {
  position: relative;
  color: #4a4a4a;
  font-size: 24rpx;
  color: #888888;
}
  .top-title{
  }
    .top-title .inline-block, .price-wrapper .inline-block{
      vertical-align: middle;
    }
.top-title .title{
  width: 37%;
  font-size: 32rpx;
  color: #4a4a4a;
}
.top-title .description{
  max-width: 35%;
  color: #888888;
  font-size: 24rpx;
}
.origin:after {
  position: absolute;
  content: "";
  width: 100%;
  height: 2rpx;
  top: 50%;
  left: 0;
  background-color: red;
}

.go-buy {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  width: 22%;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border: 2rpx solid gray;
  color: #gray;
  border-radius: 3rpx;
  font-size: 24rpx;
  z-index: 100000;
}