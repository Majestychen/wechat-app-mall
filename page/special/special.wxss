/**index.wxss**/
.inline-block {
  display: inline-block;
}
.text-overflow{
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;         /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}
.header {
  position: absolute;
  left: 0;
  top: 0;
  height: 94rpx;
  line-height: 94rpx;
  width: 100%;
  background: white;
  border-bottom: 1rpx solid #f2f2f2;
  overflow-x: auto;
}
.header-wrapper{
  height: 100%;
  overflow-x: auto;
}
.single {
  display: inline-block;
  height: 100%;
  width: 300rpx;
  text-align: center;
}

.text-detail {
  height: 100%;
  display: inline-block;
}

.single .active {
  color: #2fa7e0;
  border-bottom: 4rpx solid #2fa7e0;
}

.main-container {
  position: absolute;
  top: 94rpx;
  bottom: 0;
  width: 100%;
}

.wait-more {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.top-slider {
  display: block;
  width: 100%;
  height: 40%;
  background: white;
  border: 2rpx solid #e5e5e5;
}
.slider-sec{
  width: 100%;
  height: 100%;
}
.slide-image{
  width:100%;
  height:100%;
}
.list-detail {
  width: 100%;
  background: white;
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  margin-top: 12rpx;
  box-sizing: border-box;
}

.list-detail .list-sec {
  width: 100%;
  box-sizing: border-box;
}

.top-sec {
  width: 100%;
  height: 220rpx;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: top;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
}

.sec-img {
  display: block;
  height: 100%;
  width: 100%;
  margin: 0 auto;
  background: white;
  box-sizing: border-box;
}

.bottom-sec {
  position: relative;
  padding: 20rpx;
  display: inline-block;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

